// pyramid

		int i,j, row=5,k=0;
		
		for(i=1;i<=row;++i,k=0)
		{
			for(j=1;j<=row-i;++j)
			{
				printf("  ");
			}
			while(k!=2*i-1)
			{
				printf(" *");
				++k;
			}
			printf("\n");
		}



// Half pyramid

for(i=0;i<row;++i)
{
	for(j=0;j<i;++j)
	{
		printf("* ");
	}
	printf("\n");
}


//Floyd's Triangle

		int i,j,n=1,row=5;
		for(i=1;i<=row;++i)
		{
			for(j=0;j<i;++j)
			{
				printf("%d ",n);
				n++;
			}
			printf("\n");
		}






















